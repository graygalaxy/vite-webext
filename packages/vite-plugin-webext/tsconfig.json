{
	"compilerOptions": {
		"strict": true,
		"target": "ES2017",
		"module": "ESNext",
		"lib": ["ES2017", "DOM"],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"noEmit": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": { "@/*": ["source/*"] }
	},
	"include": ["**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
