{
	"name": "vite-plugin-webext",
	"version": "1.2.11",
	"description": "A vite plugin for generating cross browser platform, ES module based web extensions",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"author": "Avirup Ghosh (https://github.com/graygalaxy)",
	"license": "MIT",
	"repository": "github:graygalaxy/vite-webext",
	"files": [
		"dist/*",
		"client/*"
	],
	"private": false,
	"scripts": {
		"build": "tsc && rollup -c",
		"postbuild": "npx tsx source/postbuild.ts",
		"watch": "rollup -c -w",
		"lint": "prettier --write ."
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^11.1.0",
		"@types/fs-extra": "^11.0.1",
		"@types/node": "^20.1.0",
		"prettier": "2.8.8",
		"rollup": "^3.21.5",
		"tslib": "^2.5.0",
		"typescript": "^5.0.4"
	},
	"peerDependencies": {
		"vite": "^4.0.5"
	},
	"dependencies": {
		"@types/chrome": "^0.0.235",
		"@types/etag": "^1.8.1",
		"etag": "^1.8.1",
		"fs-extra": "^11.1.1",
		"magic-string": "^0.30.0",
		"vite": "^4.3.5"
	},
	"keywords": [
		"vite-plugin",
		"web-extension",
		"browser",
		"chrome",
		"firefox",
		"edge"
	]
}
