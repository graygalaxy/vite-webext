{
	"name": "vite-plugin-webext",
	"version": "1.2.8",
	"description": "A vite plugin for generating cross browser platform, ES module based web extensions",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "types/dist.d.ts",
	"author": "Avirup Ghosh (https://github.com/graygalaxy)",
	"license": "MIT",
	"repository": "github:graygalaxy/vite-webext",
	"files": [
		"types/dist.d.ts",
		"types/client.d.ts",
		"dist/*",
		"client/*"
	],
	"private": false,
	"scripts": {
		"build": "tsc && rollup -c",
		"watch": "rollup -c -w",
		"lint": "prettier --write ."
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^10.0.1",
		"@types/fs-extra": "^9.0.13",
		"@types/node": "^18.11.18",
		"prettier": "2.4.1",
		"rollup": "^3.9.0",
		"tslib": "^2.5.0",
		"typescript": "^5.0.2"
	},
	"peerDependencies": {
		"vite": "^3.0.2 || ^4.0.3"
	},
	"dependencies": {
		"@types/chrome": "^0.0.224",
		"@types/etag": "^1.8.1",
		"etag": "^1.8.1",
		"fs-extra": "^11.1.0",
		"magic-string": "^0.27.0",
		"vite": "~4.2.1"
	},
	"exports": {
		".": {
			"types": "./types/dist.d.ts",
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs"
		},
		"./client": {
			"types": "./types/client.d.ts",
			"require": "./client/index.cjs",
			"import": "./client/index.mjs"
		}
	},
	"keywords": [
		"vite-plugin",
		"web-extension",
		"browser",
		"chrome",
		"firefox",
		"edge"
	]
}
